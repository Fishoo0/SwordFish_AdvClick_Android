<resources xmlns:android="http://schemas.android.com/tools">


    <style name="textview_primary">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textview_primary_big" parent="textview_primary">
        <!-- Customize your theme here. -->
        <item name="android:textSize">18sp</item>
    </style>


    <style name="textview_secondary">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="textview_secondary_big" parent="textview_secondary">
        <!-- Customize your theme here. -->
        <item name="android:textSize">18sp</item>
    </style>


    <style name="MySpinnerLook" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>


    <style name="admin_user_list_item" parent="textview_primary">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

</resources>
